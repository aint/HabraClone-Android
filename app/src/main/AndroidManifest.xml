<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.github.aint.habraclone.android"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DisplayArticleActivity"
            android:label="@string/title_activity_display_article">
        </activity>
        <activity
            android:name=".activity.DisplayCommentsActivity"
            android:label="@string/title_activity_display_comments">
        </activity>
        <activity
            android:name=".activity.DisplayUserActivity"
            android:label="@string/title_activity_display_user">
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login">
        </activity>
    </application>

</manifest>